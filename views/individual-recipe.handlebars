<section>
    <h3>{{recipe.name}}</h3>
    <a href="../profile/{{recipe.user.id}}">
        <p>By: {{recipe.user.name}}</p>
    </a>
    <p>{{recipe.ingredients}}</p>
    <p>{{recipe.instructions}}</p>
    <div>
        <form class='form new-comment-form'>
            <textarea class="form-input w-100" id="comment"></textarea>
            <button type='button' class='btn btn-comment' id="comment-button" data-id="{{recipe.id}}">post</button>
        </form>
    </div>
    <a href='/comment/{{id}}'>
        <div class='card-body'>
            {{user.name}}
            {{#each comments as |comment|}}
            {{> comment-details}}
            {{/each}}
        </div>
    </a>
</section>

<script src='/js/comments.js'></script>