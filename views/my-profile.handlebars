{{#if recipes.length}}
<div style="margin: 20px"class="col-md-6 project-list">
  <h3>My Recipes:</h3>

  {{#each recipes as |recipe|}}
  <div style="margin-top: 10px" class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h4>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
<p style="margin: 20px">
Following:
</p>
<ul>
  {{#each following as |follow|}}
  <li>
    <a href="/profile/{{follow.Following.id}}">{{follow.Following.name}}</a>
  </li>
  {{/each}}
</ul>
</div>