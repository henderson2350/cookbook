{{#if recipes.length}}
<div class="col-md-6 project-list">
  <div>
    <h3>{{name}}'s Recipes: {{id}}</h3>
    <button type="button" data-id="{{id}}" id="follow-button">Follow me</button>
  </div>
  {{#each recipes as |recipe|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h4>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>

Following:
<ul>
  {{#each following as |follow|}}
  <li>
    <a href="/profile/{{follow.Following.id}}">{{follow.Following.name}}</a>
  </li>
  {{/each}}
</ul>

<button type="button" data-id="{{id}}" id="follow-button">Follow me</button>

<script src="/js/profile.js"></script>